<%- include('../part/header') %>
<%- include('../part/navbar') %>
    <div class="container pt-5">
        <h3>Users</h3>
        <table class="w-100 table table-striped">
        <thead>
            <tr>
                <th>User</th>
                <th>Type</th>
                <th>Id</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach((user) => {%>
                <tr>
                    <td>
                        <%= user.login%>
                    </td>
                    <td>
                        <%= user.role%>
                    </td>
                    <td>
                        <%= user.id%>
                    </td>
                    <td class="text-right">
                        <% if (user.active) { %>
                            <a href="./user/disable/<%= user.id %>" class="btn btn-sm btn-success text-white">Enabled</a>
                        <% } else { %>
                            <a href="./user/enable/<%= user.id %>" class="btn btn-sm btn-warning text-white">Disabled</a>
                        <% } %>
                        <a href="./user/delete/<%= user.id %>" class="btn btn-sm btn-danger text-white">Delete</a>
                    </td>
                </tr>
            <% });%>
        </tbody>
        </table>
    </div>    
<%- include('../part/footer') %>
